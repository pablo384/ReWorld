<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="0dp"
    tools:context="com.reworld.pablo384.reworld.UI.fragments.Fragment_account">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_transparent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/reworld"
            app:civ_border_color="#9b9b9b"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="Pablo Reinoso"
            android:textSize="28sp" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@color/gray_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btCalculator"
                style="@style/ButtonsAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculator" />

            <Button
                android:id="@+id/btTaskRecycle"
                style="@style/ButtonsAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task to Recycle" />

            <Button
                style="@style/ButtonsAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read QR Code" />

            <Button
                style="@style/ButtonsAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings" />
            <Button
                android:id="@+id/btLogOut"
                style="@style/ButtonsAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:text="Log Out" />

        </LinearLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>
