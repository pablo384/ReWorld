<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fnBtn="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myCoordinatorLayoutRecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.reworld.pablo384.reworld.UI.fragments.Fragment_recycle">

    <ImageView
        android:id="@+id/imageViewTookPicture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_weight=".7"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/noimage_icon_darck_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/editTextDescription"
            style="@style/EditTextBlack"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:hint="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTookPicture">

        </EditText>


    <ImageButton
        android:id="@+id/buttonTakePicture"
        style="@style/ButtonsAccount"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_camera_alt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescription" />

    <com.ekalips.fancybuttonproj.FancyButton
        android:id="@+id/buttonUpload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonTakePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescription"
        fnBtn:btnStyle="stroke_fill"
        fnBtn:fillColor="@color/colorPrimary"
        fnBtn:hideFillAfterCollapse="false"
        fnBtn:progressColor="@color/colorPrimaryDark"
        fnBtn:strokeColor="@color/colorPrimary"
        fnBtn:text="Upload"
        fnBtn:textColor="#000" />



</android.support.constraint.ConstraintLayout>
